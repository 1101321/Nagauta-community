<div class="container px-5 px-sm-0 mt-3">
  <div class="row">

    <div class="col-md-3">
      <h2>ユーザー</h2>
      <%= render 'info', user: @user %>
    </div>
    
    
    <div class="col-md-8">
      
      <% if @user == current_user %>
        <div class="row">
          <%= link_to 'プロフィールを編集', edit_user_path(@user), class: "btn btn-outline-dark btn-block" %>
        </div>
      <% end %>
      
      <h2 class="mt-3"><strong><%= @user.name %></strong>さんの楽曲一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th></th>
            <th>楽曲名</th>
            <th>投稿日時</th>
          </tr>
        </thead>
        <tbody>
          <% @musics.each do |music| %>
            <tr>
              <td>
                <%= link_to user_path(music.user.id) do %>
                  <%= attachment_image_tag music.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
              </td>
              <td><%= @user.name %></td>
              <td><%= link_to music.title, music_path(music) %></td>
              <td><%= music.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>