<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>ユーザー情報編集</h2>
      <%= form_with model:@user, local:true do |f| %>
      <table class="table">
        <tr>
          <th>プロフィール画像</th>
          <td><%= f.attachment_field :profile_image %></td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name, class: "form-control name" %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= f.text_field :introduction, class: "form-control introduction" %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email, class: "form-control email" %></td>
        </tr>
        <tr>
          <td><%= f.submit class: 'btn' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>

