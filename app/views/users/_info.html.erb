<table>
  <tr>
    <%= attachment_image_tag(user, :profile_image, size: '100x100', fallback: "no_image.jpg") %>
    </tr>
  <tr>
    <th>名前</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>自己紹介</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー</th>
    <th><%= link_to "#{user.followings.count}", user_followings_path(user.id), class: "btn btn-default" %></th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th><%= link_to "#{user.followers.count}", user_followers_path(user.id), class: "btn btn-default" %></th>
  </tr>
</table>

<div class="row mt-3">
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <td><%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-dark btn-block" %></td>
    <% else %>
      <td><%= link_to "＋フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-dark btn-block" %></td>
    <% end %>
  <% end %>
</div>