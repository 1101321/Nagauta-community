<footer class="bg-white text-dark border-top mt-5 py-4">
  <div class="container">
    <div class="navbar">
      <div class="row">
        <%= form_with url:search_path, method: :get, local: true do |f| %>
          <%= f.text_field 'search[value]' %>
          <%= f.select 'search[model]', options_for_select({ "ユーザー" => "user", "楽曲" => "music" }) %>
          <%= f.select 'search[how]', options_for_select({ "完全一致" => "match", "部分一致" => "partical"  }) %>
          <%= f.submit :"検索" %>
        <% end %>
      </div>
      <div class="footer_copyright">
        <p>Copyright©2021 Nagauta community All Rights Reserved.</p>
      </div>
    </div>
  </div>
</footer>