<div class="container px-5 px-sm-0 mt-3">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
    </div>

    <div class="col-md-7">
      <h2 class="mt-3 text-center">楽曲編集</h2>
        <div class="form">
          <%= form_with model:@music,local:true do |f| %>
            <div class="form-group">
              <label for="music_title">楽曲名</label>
              <%= f.text_field :title, class: "form-control music_title" %>
            </div>
            <div class="form-group">
              <label for="music_opinion">楽曲説明</label>
              <%= f.text_area :body, :size=>"60x10", class: "form-control music_body" %>
            </div>
            <div class="form-group">
              <%= f.submit "変更を保存", class: "btn btn-outline-success" %>
            </div>
          <% end %>
        </div>
    </div>

    <div class="col-md-2">
      <%= render 'searches/form' %>
    </div>

  </div>
</div>