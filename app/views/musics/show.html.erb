<div class="container px-5 px-sm-0 mt-3">
  <div class="row">

    <div class="col-md-3">
      <h2>ユーザー</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">楽曲投稿フォーム</h2>
      <%= render 'musics/form', music: @music %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2></h2>
      <table class="table">
        <tr>
          <th>楽曲</th>
          <td><%= @music.title %></td>
        </tr>
        <tr>
          <th>楽曲説明</th>
          <td><%= @music.body %></td>
        </tr>
      </table>
    </div>

  </div>
</div>